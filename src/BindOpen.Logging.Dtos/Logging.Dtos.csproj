<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>BindOpen.Logging.Dtos</AssemblyName>
    <PackageId>BindOpen.Logging.Dtos</PackageId>
    <Product>BindOpen.Logging</Product>
    <Company>BindOpen</Company>
    <Copyright>Copyright ©BindOpen 2011-2022</Copyright>
    <Description>The classes of data transfer objects for BindOpen framework.</Description>
    <Authors>Sumer Team</Authors>
    <RootNamespace>BindOpen.Logging.Dtos</RootNamespace>
    <PackageProjectUrl>https://github.com/bindopen/BindOpen.Logging</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bindopen/BindOpen.Logging.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>bindopen_icon.png</PackageIcon>
    <PackageIconUrl>https://www.BindOpen.Framework.org/images/favicon_bdo.png</PackageIconUrl>
    <SignAssembly>true</SignAssembly>
    <PackageReadmeFile>Readme.md</PackageReadmeFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>BindOpen.Framework.Dtos.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\docs\images\bindopen_icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\Readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BindOpen.Framework.Dtos" Version="1.1.5" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BindOpen.Logging.Abstractions\Logging.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Events\BdoEventCriticality.xsd">
      <SubType>Designer</SubType>
    </None>
    <None Update="Events\BdoEventKinds.xsd">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>
</Project>
